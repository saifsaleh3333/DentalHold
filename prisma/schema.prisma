generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Practice {
  id            String   @id @default(uuid())
  name          String
  address       String?
  city          String?
  state         String?
  zip           String?
  phone         String?
  fax           String?
  npiPractice   String?
  npiIndividual String?
  taxId         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  users         User[]
  verifications Verification[]
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  role          String    @default("staff") // "admin" or "staff"
  practiceId    String?
  practice      Practice? @relation(fields: [practiceId], references: [id])

  accounts      Account[]
  sessions      Session[]
  verifications Verification[] @relation("CreatedByUser")
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Verification {
  id               String   @id @default(uuid())
  createdAt        DateTime @default(now())
  status           String   @default("in_progress") // "completed", "in_progress", "failed"

  // Patient Info
  patientName      String
  patientDOB       String
  memberId         String
  insuranceCarrier String

  // Call Info
  callDuration     String?
  recordingUrl     String?
  transcript       String?

  // Benefits (stored as JSON string)
  benefits         String?

  // Reference
  referenceNumber  String?
  repName          String?

  // Multi-tenancy
  practiceId       String?
  practice         Practice? @relation(fields: [practiceId], references: [id])
  createdById      String?
  createdBy        User?     @relation("CreatedByUser", fields: [createdById], references: [id])
}
